<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

    <bean class="org.wso2.carbon.identity.api.server.entitlement.v1.core.ServerEntitlementsManagementService"/>
    <bean class="org.wso2.carbon.identity.api.server.entitlement.v1.impl.EntitlementsApiServiceImpl"/>
    <bean id="entitlementAdminServiceOSGIServiceFactory"
          class="org.wso2.carbon.identity.api.server.entitlement.common.factory.EntitlementAdminServiceOSGIServiceFactory"/>
    <bean id="entitlementPolicyAdminServiceOSGIServiceFactory"
          class="org.wso2.carbon.identity.api.server.entitlement.common.factory.EntitlementPolicyAdminServiceOSGIServiceFactory"/>
    <bean id="entitlementAdminService"
          factory-bean="entitlementAdminServiceOSGIServiceFactory"
          factory-method="createInstance" />
    <bean id="entitlementPolicyAdminService"
          factory-bean="entitlementPolicyAdminServiceOSGIServiceFactory"
          factory-method="createInstance" />
    <bean id="entitlementPolicyAdminServiceOSGIServiceFactoryBean"
          class="org.wso2.carbon.identity.api.server.entitlement.common.factory.EntitlementPolicyAdminServiceOSGIServiceFactory"/>
    <bean class="org.wso2.carbon.identity.api.server.entitlement.common.EntitlementManagementServiceHolder">
        <property name="entitlementAdminService" ref="entitlementAdminService"/>
        <property name="entitlementPolicyAdminService" ref="entitlementPolicyAdminService"/>
    </bean>
    <bean id="decisionBean" class="org.wso2.carbon.identity.api.server.entitlement.v1.resources.DecisionResource"/>
</beans>
